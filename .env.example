# === CONFIGURACIÓN WHISPER ===
MODEL_SIZE=small
MAX_CONCURRENT_JOBS=3
MAX_FILE_SIZE=524288000

# === CONFIGURACIÓN GPU ===
DEVICE=cuda
COMPUTE_TYPE=float16
NUM_WORKERS=1
DEVICE_INDEX=0
CPU_THREADS=4

# === OPTIMIZACIÓN TRANSCRIPCIÓN ===
BEAM_SIZE=1
BEST_OF=1
TEMPERATURE=0.0
VAD_FILTER=true
MIN_SILENCE_DURATION_MS=300
VAD_THRESHOLD=0.4
CHUNK_LENGTH=30
CONDITION_ON_PREVIOUS_TEXT=false
COMPRESSION_RATIO_THRESHOLD=2.4
LOG_PROB_THRESHOLD=-1.0
NO_SPEECH_THRESHOLD=0.6

# === CONFIGURACIÓN REDIS ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=tu_password_aqui

# === CONFIGURACIÓN API ===
API_TITLE=Whisper Transcription API
API_DESCRIPTION=API de transcripción de audio con Faster Whisper
API_VERSION=1.0.0
DEBUG=false

# === CONFIGURACIÓN SERVIDOR ===
HOST=0.0.0.0
PORT=8000
WORKERS=1

# === CONFIGURACIÓN LOGS ===
LOG_LEVEL=INFO
LOG_FILE=whisper-api.log
LOG_ROTATION=1 day
LOG_RETENTION=7 days

# === CONFIGURACIÓN ARCHIVOS ===
UPLOAD_DIR=temp_uploads
CLEANUP_INTERVAL_HOURS=24
CLEANUP_AGE_DAYS=7