# === CONFIGURACIÓN ALWAYS-ON TESLA T4 ===
# Modelo SIEMPRE cargado para máxima velocidad

# === MODELO WHISPER ALWAYS-ON ===
MODEL_SIZE=medium
MAX_CONCURRENT_JOBS=1
MAX_FILE_SIZE=209715200  # 200MB

# === OPTIMIZACIÓN ALWAYS-LOADED ===
LAZY_MODEL_LOADING=false  # Cargar al inicio, nunca descargar
MODEL_UNLOAD_TIMEOUT=999999  # Nunca descargar
AGGRESSIVE_CLEANUP=false  # Suave para no afectar modelo cargado
STREAM_FILE_THRESHOLD=15728640  # 15MB

# === WHISPER OPTIMIZADO ===
BEAM_SIZE=1
TEMPERATURE=0.0
VAD_FILTER=true
CHUNK_LENGTH=30
CONDITION_ON_PREVIOUS_TEXT=false

# === GPU T4 OPTIMIZADO ===
DEVICE=cuda
COMPUTE_TYPE=float16
CPU_THREADS=2

# === API MÁXIMA VELOCIDAD ===
RESPONSE_COMPRESSION=true
FAST_VALIDATION=true
MINIMAL_LOGGING=true

# === SERVIDOR ===
HOST=0.0.0.0
PORT=8000
WORKERS=1

# === ARCHIVOS ===
UPLOAD_DIR=temp_uploads
ALLOWED_EXTENSIONS=[".mp3",".wav",".m4a",".flac",".ogg"]
TEMP_FILE_CLEANUP=15

# === LOGS OPTIMIZADOS ===
LOG_LEVEL=INFO  # Para ver logs de estado del modelo
DEBUG=false

# === REDIS (PARA SEMÁFORO) ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0